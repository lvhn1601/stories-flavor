generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  phone       String?  @unique
  name        String?  @unique
  password    String?
  role        String   @default("user")
  isActivated Boolean  @default(false)
  created_at  DateTime @default(now())
  image       String?
  blogs       Blog[]
  orders      Order[]
  reviews     Review[]
  addresses   UserAddress[]
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  category    Category
  price       Float
  status      Boolean     @default(true)
  images      String[]
  createdAt   DateTime    @default(now())
  description String?
  province    String      @default("hanoi")
  orderItems  OrderItem[]
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  comment   String?
  createdAt DateTime @default(now())
  userId    Int
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  Int
  image     String
  author    User     @relation(fields: [authorId], references: [id])
}

model Order {
  id               Int         @id @default(autoincrement())
  customerName     String
  customerPhone    String
  customerProvince String
  customerAddress  String
  status           OrderStatus @default(PENDING)
  total            Float       @default(0)
  createdAt        DateTime    @default(now())
  userId           Int
  note             String?
  user             User        @relation(fields: [userId], references: [id])
  items            OrderItem[]
}

model UserAddress {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  province  String
  address   String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int     @default(1)
  unitPrice Float
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

enum Category {
  OPTIONAL
  SUGGEST
  HIGHEND
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  COMPLETED
  CANCELLED
}
